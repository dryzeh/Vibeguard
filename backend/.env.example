# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/secure_app?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Security Configuration
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_ORIGINS="http://localhost:19006,http://localhost:3000,exp://localhost:19000"

# Email Configuration (for password reset and verification)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@vibeguard.se

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Feature Flags
ENABLE_AUDIT_LOGS=true
ENABLE_RATE_LIMITING=true
ENABLE_WEBSOCKET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
TRACING_SAMPLE_RATE=0.1

# Cache Configuration
REDIS_URL="redis://localhost:6379"
CACHE_TTL=3600

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_PATH=/ws

# Admin Configuration
ADMIN_EMAIL=admin@vibeguard.se
ADMIN_PASSWORD=change-this-in-production
ADMIN_NAME="System Administrator"
